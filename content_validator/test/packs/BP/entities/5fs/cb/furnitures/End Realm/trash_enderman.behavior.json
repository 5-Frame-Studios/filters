{
    "format_version": "1.18.0",
    "minecraft:entity": {
        "description": {
            "identifier": "5fs_cb:trash_enderman",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "animations": {
                "clear_inv": "controller.animation.5fs_cb.clear_inv"
            },
            "scripts": {
                "animate": ["clear_inv"]
            }
        },
        "component_groups": {
            //toggle function
            "5fs_cb:toggle": {
                "minecraft:is_sheared": {}
            },
            "5fs_cb:timer": {
                "minecraft:timer": {
                    "time": 0.5,
                    "looping": true,
                    "time_down_event": {
                        "event": "5fs_cb:remove_query",
                        "target": "self"
                    }
                }
            },
            "5fs_cb:inventory": {
                "minecraft:inventory": {
                    "container_type": "hopper"
                }
            },
            //rotation function
            "5fs_cb:default": {
                "minecraft:variant": {
                    "value": 0
                }
            },
            "5fs_cb:rotate_90": {
                "minecraft:variant": {
                    "value": 1
                }
            },
            "5fs_cb:rotate_180": {
                "minecraft:variant": {
                    "value": 2
                }
            },
            "5fs_cb:rotate_270": {
                "minecraft:variant": {
                    "value": 3
                }
            },
            //demolish function
            "5fs_cb:item_scale": {
                "minecraft:variant": {
                    "value": 4
                },
                "minecraft:collision_box": {
                    "width": 0.235,
                    "height": 0.4
                },
                "minecraft:physics":{
                    "has_gravity": true
                },
                "minecraft:entity_sensor": {
                    "sensor_range": 0.4,
                    "event": "5fs_cb:spawn_item",
                    "event_filters": {
                        "test": "is_family",
                        "subject": "other",
                        "operator": "==",
                        "value": "player"
                    }
                }
            },
            "5fs_cb:available_item": {
                "minecraft:spawn_entity": {
                    "entities": [
                        {
                            "single_use": true,
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "spawn_item": "5fs_cb:trash_enderman"
                        }
                    ]
                },
                "minecraft:instant_despawn": {}
            }
        },
        "components": {
            "minecraft:collision_box": {
                "width": 0.75,
                "height": 2
            },
            "minecraft:push_through": {
                "value": 1
            },
            "minecraft:physics": {},
            "minecraft:pushable": {
                "is_pushable": false
            },
            "minecraft:interact": {
                "interactions": [
                    {
                        "on_interact": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "has_component",
                                        "operator": "!=",
                                        "subject": "self",
                                        "value": "minecraft:is_sheared"
                                    },
                                    {
                                        "test": "has_equipment",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "5fs_cb:wrench"
                                    },
                                    {
                                        "test": "has_equipment",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "5fs_cb:sledgehammer"
                                    },
                                    {
                                        "test": "is_sneaking",
                                        "subject": "other",
                                        "value": true
                                    }
                                ]
                            },
                            "event": "5fs_cb:toggle_interaction"
                        },
                        "interact_text": "action.interact.clear"
                    },
                    {//rotate Structure
                        "on_interact": {
                            "filters": {
                                "test": "has_equipment",
                                "subject": "other",
                                "value": "5fs_cb:wrench"
                            },
                            "event": "5fs_cb:rotate_structure"
                        },
                        "cooldown": 0.6,
                        "use_item": false,
                        "play_sounds": "saddle",
                        "interact_text": "action.interact.structure_rotation"
                    },                    {
                        "on_interact": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "has_equipment",
                                        "subject": "other",
                                        "value": "5fs_cb:sledgehammer"
                                    },
                                    {
                                        "test": "has_tag",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "adventure"
                                    }
                                ]
                            },
                            "event": "5fs_cb:convert_to_item"
                        },
                        "use_item": false,
                        "play_sounds": "saddle",
                        "interact_text": "action.interact.structure_pickup"
                    }
                ]
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": false
                    }
                ]
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": ["5fs_cb:inventory"]
                }
            },
            "5fs_cb:rotate_structure": {
                "sequence": [
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 0
                        },
                        "add": {
                            "component_groups": [
                                "5fs_cb:rotate_90"
                            ]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 1
                        },
                        "add": {
                            "component_groups": [
                                "5fs_cb:rotate_180"
                            ]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 2
                        },
                        "add": {
                            "component_groups": [
                                "5fs_cb:rotate_270"
                            ]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 3
                        },
                        "add": {
                            "component_groups": [
                                "5fs_cb:default"
                            ]
                        }
                    }
                ]
            },
            "5fs_cb:convert_to_item": {
                "add": {
                    "component_groups": [
                        "5fs_cb:item_scale"
                    ]
                }
            },
            "5fs_cb:spawn_item": {
                "remove": {
                    "component_groups": [
                        "5fs_cb:item_scale"
                    ]
                },
                "add": {
                    "component_groups": [
                        "5fs_cb:available_item"
                    ]
                }
            },
            "5fs_cb:toggle_interaction": {
                "add": {
                    "component_groups": ["5fs_cb:toggle","5fs_cb:timer"]
                },
                "remove": {
                    "component_groups": ["5fs_cb:inventory"]
                }
            },
            "5fs_cb:remove_query": {
                "add": {
                    "component_groups": ["5fs_cb:inventory"]
                },
                "remove": {
                    "component_groups": ["5fs_cb:toggle","5fs_cb:timer"]
                }
            }
        }
    }
}