{
  "format_version": "1.18.0",
  "minecraft:entity": {
    "description": {
      "identifier": "5fs_cb:chandelier_snow_golem",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "animations": {
        "general": "controller.animation.5fs_cb.toggle_light",
        "sound": "controller.animation.5fs_cb.mob_sounds"
      },
      "scripts": { "animate": ["general", "sound"] }
    },
    "component_groups": {
      "5fs_cb:spawn": {
        "minecraft:physics": {
          "has_gravity": false
        }
      },
      //toggle function
      "5fs_cb:toggle": {
        "minecraft:is_sheared": {}
      },
      //rotation function
      "5fs_cb:default": {
        "minecraft:variant": {
          "value": 0
        }
      },
      "5fs_cb:rotate_90": {
        "minecraft:variant": {
          "value": 1
        }
      },
      "5fs_cb:rotate_180": {
        "minecraft:variant": {
          "value": 2
        }
      },
      "5fs_cb:rotate_270": {
        "minecraft:variant": {
          "value": 3
        }
      },
      //demolish function
      "5fs_cb:item_scale": {
        "minecraft:variant": {
          "value": 4
        },
        "minecraft:physics": {
          "has_gravity": true
        },
        "minecraft:collision_box": {
          "width": 0.235,
          "height": 0.4
        },
        "minecraft:entity_sensor": {
          "sensor_range": 0.4,
          "event": "5fs_cb:spawn_item",
          "event_filters": {
            "test": "is_family",
            "subject": "other",
            "operator": "==",
            "value": "player"
          }
        }
      },
      "5fs_cb:available_item": {
        "minecraft:spawn_entity": {
          "entities": [
            {
              "single_use": true,
              "min_wait_time": 0,
              "max_wait_time": 0,
              "spawn_item": "5fs_cb:chandelier_snow_golem"
            }
          ]
        },
        "minecraft:instant_despawn": {}
      }
    },
    "components": {
      "minecraft:collision_box": {
        "width": 0.25,
        "height": 0.5
      },
      "minecraft:pushable": {
        "is_pushable": false
      },
      "minecraft:interact": {
        "interactions": [
          {
            "on_interact": {
              "filters": {
                "all_of": [
                  {
                    "test": "has_equipment",
                    "subject": "other",
                    "value": "5fs_cb:sledgehammer"
                  },
                  {
                    "test": "has_tag",
                    "subject": "other",
                    "operator": "!=",
                    "value": "adventure"
                  }
                ]
              },
              "event": "5fs_cb:convert_to_item"
            },
            "use_item": false,
            "play_sounds": "saddle",
            "interact_text": "action.interact.structure_pickup"
          },
          {
            "on_interact": {
              "filters": {
                "test": "has_equipment",
                "subject": "other",
                "value": "5fs_cb:wrench"
              },
              "event": "5fs_cb:rotate_structure"
            },
            "cooldown": 0.6,
            "use_item": false,
            "play_sounds": "saddle",
            "interact_text": "action.interact.structure_rotation"
          },
          {
            "on_interact": {
              "filters": {
                "all_of": [
                  {
                    "test": "is_variant",
                    "subject": "self",
                    "operator": "not",
                    "value": 4
                  },
                  {
                    "test": "has_component",
                    "operator": "!=",
                    "subject": "self",
                    "value": "minecraft:is_sheared"
                  },
                  {
                    "test": "has_equipment",
                    "subject": "other",
                    "operator": "!=",
                    "value": "5fs_cb:wrench"
                  },
                  {
                    "test": "has_equipment",
                    "subject": "other",
                    "operator": "!=",
                    "value": "5fs_cb:sledgehammer"
                  }
                ]
              },
              "event": "5fs_cb:toggle_interaction"
            },
            "interact_text": "action.interact.turn_on"
          },
          {
            "on_interact": {
              "filters": {
                "all_of": [
                  {
                    "test": "is_variant",
                    "subject": "self",
                    "operator": "not",
                    "value": 4
                  },
                  {
                    "test": "has_component",
                    "subject": "self",
                    "value": "minecraft:is_sheared"
                  },
                  {
                    "test": "has_equipment",
                    "subject": "other",
                    "operator": "!=",
                    "value": "5fs_cb:wrench"
                  },
                  {
                    "test": "has_equipment",
                    "subject": "other",
                    "operator": "!=",
                    "value": "5fs_cb:sledgehammer"
                  }
                ]
              },
              "event": "5fs_cb:toggle_interaction"
            },
            "interact_text": "action.interact.turn_off"
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": { "component_groups": ["5fs_cb:spawn"] },
        "randomize": [
          { "add": { "component_groups": ["5fs_cb:skin_0"] } },
          { "add": { "component_groups": ["5fs_cb:skin_1"] } },
          { "add": { "component_groups": ["5fs_cb:skin_2"] } },
          { "add": { "component_groups": ["5fs_cb:skin_3"] } },
          { "add": { "component_groups": ["5fs_cb:skin_4"] } }
        ]
      },
      "5fs_cb:rotate_structure": {
        "sequence": [
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 0
            },
            "add": {
              "component_groups": ["5fs_cb:rotate_90"]
            }
          },
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 1
            },
            "add": {
              "component_groups": ["5fs_cb:rotate_180"]
            }
          },
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 2
            },
            "add": {
              "component_groups": ["5fs_cb:rotate_270"]
            }
          },
          {
            "filters": {
              "test": "is_variant",
              "subject": "self",
              "value": 3
            },
            "add": {
              "component_groups": ["5fs_cb:default"]
            }
          }
        ]
      },
      "5fs_cb:convert_to_item": {
        "add": { "component_groups": ["5fs_cb:item_scale"] },
        "remove": { "component_groups": ["5fs_cb:toggle"] },
        "queue_command": {
            "command":"fill ~~~ ~~~ air replace light_block_15"
        }
      },
      "5fs_cb:spawn_item": {
        "remove": {
          "component_groups": ["5fs_cb:item_scale"]
        },
        "add": {
          "component_groups": ["5fs_cb:available_item"]
        }
      },
      "5fs_cb:toggle_interaction": {
        "sequence": [
          {
            "filters": {
              "test": "has_component",
              "operator": "!=",
              "value": "minecraft:is_sheared"
            },
            "add": {
              "component_groups": ["5fs_cb:toggle"]
            },
            "queue_command": {
                "command":"setblock ~~~ light_block_15"
            }
          },
          {
            "filters": {
              "test": "has_component",
              "value": "minecraft:is_sheared"
            },
            "remove": {
              "component_groups": ["5fs_cb:toggle"]
            },
            "queue_command": {
                "command":"fill ~~~ ~~~ air replace light_block_15"
            }
          }
        ]
      }
    }
  }
}
