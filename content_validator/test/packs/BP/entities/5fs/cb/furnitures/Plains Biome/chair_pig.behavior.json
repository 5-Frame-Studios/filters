{
    "format_version": "1.18.0",
    "minecraft:entity": {
        "description": {
            "identifier": "5fs_cb:chair_pig",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            //chair rotation function
            "5fs_cb:default": {
                "minecraft:variant": {
                    "value": 0
                },
                "minecraft:rideable": {
                    "seat_count": 1,
                    "rider_can_interact": false,
                    "interact_text": "action.interact.seat",
                    "seats": [
                        {
                            "position": [0, 0.65, 0],
                            "lock_rider_rotation": 90
                        }
                    ]
                }
            },
            "5fs_cb:rotate_90": {
                "minecraft:variant": {
                    "value": 1
                },
				"minecraft:rideable": {
					"seat_count": 1,
					"rider_can_interact": false,
                    "interact_text": "action.interact.seat",
					"seats": [
                        {
                            "position": [0, 0.65, 0],
                            "lock_rider_rotation": 90,
                            "rotate_rider_by": 90
                        }
                    ]
				}		
            },
            "5fs_cb:rotate_180": {
                "minecraft:variant": {
                    "value": 2
                },
				"minecraft:rideable": {
					"seat_count": 1,
					"rider_can_interact": false,
                    "interact_text": "action.interact.seat",
					"seats": [
                        {
                            "position": [0, 0.65, 0],
                            "lock_rider_rotation": 90,
                            "rotate_rider_by": 180
                        }
                    ]
				}
            },
            "5fs_cb:rotate_270": {
                "minecraft:variant": {
                    "value": 3
                },
				"minecraft:rideable": {
					"seat_count": 1,
					"rider_can_interact": false,
                    "interact_text": "action.interact.seat",
					"seats": [
                        {
                            "position": [0, 0.65, 0],
                            "lock_rider_rotation": 90,
                            "rotate_rider_by": 270
                        }
                    ]
				}
            },
            //demolish function
            "5fs_cb:item_scale": {
                "minecraft:variant": {
                    "value": 4
                },
                "minecraft:collision_box": {
                    "width": 0.235,
                    "height": 0.4
                },
				"minecraft:entity_sensor": {
					"sensor_range": 0.4,
					"event": "5fs_cb:spawn_item",
					"event_filters": {
						"test": "is_family",
						"subject": "other",
						"operator": "==",
						"value": "player"
					}
				}
            },
            "5fs_cb:available_item": {
                "minecraft:spawn_entity": {
                    "entities": [
                        {
                            "single_use": true,
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "spawn_item": "5fs_cb:chair_pig"
                        }
                    ]
                },
                "minecraft:instant_despawn":{}
            }
        },
        "components": {
            "minecraft:health": {
                "value": 1,
                "max": 1
            },
            "minecraft:collision_box": {
                "width": 0.25,
                "height": 1
            },
            "minecraft:physics":{},
            "minecraft:pushable": {
                "is_pushable": false
            },
            "minecraft:interact": {
                "interactions": [
                    {
                        "on_interact": {
                            "filters": {
                                "test": "has_equipment",
                                "subject": "other",
                                "value": "5fs_cb:wrench"
                            },
                            "event": "5fs_cb:rotate_structure"
                        },
                        "cooldown": 0.6,
                        "use_item": false,
                        "play_sounds": "saddle",
                        "interact_text": "action.interact.structure_rotation"
                    },                    {
                        "on_interact": {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "has_equipment",
                                        "subject": "other",
                                        "value": "5fs_cb:sledgehammer"
                                    },
                                    {
                                        "test": "has_tag",
                                        "subject": "other",
                                        "operator": "!=",
                                        "value": "adventure"
                                    }
                                ]
                            },
                            "event": "5fs_cb:convert_to_item"
                        },
                        "use_item": false,
                        "play_sounds": "saddle",
                        "interact_text": "action.interact.structure_pickup"
                    }
                ]
            },   
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": false
                    }
                ]
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": ["5fs_cb:default"]
                }
            },
            "5fs_cb:rotate_structure": {
                "sequence": [
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 0
                        },
                        "add": {
                            "component_groups": ["5fs_cb:rotate_90"]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 1
                        },
                        "add": {
                            "component_groups": ["5fs_cb:rotate_180"]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 2
                        },
                        "add": {
                            "component_groups": ["5fs_cb:rotate_270"]
                        }
                    },
                    {
                        "filters": {
                            "test": "is_variant",
                            "subject": "self",
                            "value": 3
                        },
                        "add": {
                            "component_groups": ["5fs_cb:default"]
                        }
                    }
                ]
            },
            "5fs_cb:convert_to_item": {
                "add": {
                    "component_groups":[ "5fs_cb:item_scale"]
                }
            },
            "5fs_cb:spawn_item": {
                "remove": {
                    "component_groups": ["5fs_cb:item_scale"]
                },
                "add": {
                    "component_groups": ["5fs_cb:available_item"]
                }
            }
        }
    }
}